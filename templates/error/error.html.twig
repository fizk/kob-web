{% extends '@layout/default.html.twig' %}

{% block title %}{{ status }} {{ reason }}{% endblock %}

{% block content %}
    <main class="four-o-four">
        <article class="article">
            <aside class="article__aside">
                <h1 class="four-o-four__headline">:(</h1>
            </aside>
            <div class="article__body">
                {% include '@partials/header.html.twig' %}

                {% if message %}
                <h2 style="background-color:white">{{message}}</h2>
                {% endif %}
                {% if trace %}
                <ol style="padding:1rem;background-color:white">
                {% for item in trace %}
                    <li>
                        <ul style="padding:1rem;">
                            <li><strong>file</strong> | {{item.file}}</li>
                            <li><strong>line</strong> | {{item.line}}</li>
                            <li><strong>function</strong> | {{item.function}}</li>
                            <li><strong>class</strong> | {{item.class}}</li>
                            <li><strong>type</strong> | {{item.type}}</li>
                        </ul>
                    </li>
                {% endfor %}
                </ol>
                {% endif %}

                <form method="get" class="search search--tail" action="{{ path(language|default('is') == 'is' ? 'leit' : 'search') }}">
                    <input class="search__text" type="search" name="q" value="{{ query|default('') }}" placeholder="{{ language|default('is') == 'is' ? 'Leit...' : 'Search...' }}" />
                    <button class="search__button">{{ language|default('is') == 'is' ? 'leit' : 'search' }}</button>
                </form>
            </div>
        </article>
    </main>
{% endblock %}
